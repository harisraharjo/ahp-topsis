{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "~components": ["src/components"],
      "~components/*": ["src/components/*"],
      "~middleware/*": ["src/oldpages/api/*"],
      "~env/*": ["src/env/*"],
      "~server/*": ["src/server/*"],
      "~server": ["src/server"],
      "~layouts/*": ["src/layouts/*"],
      "~layouts": ["src/layouts"],
      "~lib/*": ["src/lib/*"],
      "~lib": ["src/lib"],
      "~public/*": ["public/*"],
      "~public": ["public"],
      "~styles/*": ["src/styles/*"],
      "~styles": ["src/styles"],
      "~test/*": ["test/*"],
      "~test": ["test"],
      "~customTypes": ["src/types"],
      "~utils/*": ["src/utils/*"],
      "~utils": ["src/utils"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
